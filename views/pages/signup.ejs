<html>
    <head>
        <title>Login Here</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <script type="text/javascript" src="/js/Weather.js"></script>
        <link rel="stylesheet" type="text/css" href="/stylesheets/login.css" />
    </head>
    <body class="container" style="background-image: url(http://eskipaper.com/images/vancouver-background-1.jpg)">
        <div class="page-header">
                <% include ../partials/nav.ejs %>
        </div>

        <div class="container row">
            <div class="jumbotron col-sm-4 pull-center">
                <form action="/signup" method="post">
                    <div>
                        <label>Username:</label>
                        <input type="text" name="username" required/>
                    </div>   
                    <div>
                        <label>Password:</label>
                        <input type="password" name="password" required/>
                    </div>
                    <div>
                        <input class="btn btn-primary" type="submit" value="Register"/>
                    </div>
                </form>                  
            </div>          
        </div>
        <!-- weather api  -->
        <div id="weather-wrapper">
                <p id="weather-text">Current Weather via OpenWeatherMap.org</p>
                <div id="weather">
                    <div id="description">raining</div>
                    <h1 id="temp">10</h1>
                    <div id="location">Vancouver</div>
                </div>
            </div>
    </body>
</html>